<Window x:Class="RMWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="pack://application:,,,/Appicon_wpf.ico"
        Title="RMWatcher v0.2.5-a.9"
        Height="495" Width="470"
        ResizeMode="CanMinimize"
        Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                      BlurRadius="6"
                      ShadowDepth="1"
                      Opacity="0.14"
                      Color="#333"/>
    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="14">

        <!-- Settings button: Docked at absolute bottom right -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button Content="Settings"
                    x:Name="SettingsBtn"
                    Width="88" Height="28"
                    FontSize="12"
                    Click="SettingsBtn_Click"/>
        </StackPanel>

        <!-- Main content: everything else, in vertical order -->
        <StackPanel>
            <!-- Add URL Section -->
            <TextBlock Text="Add Reddit Post URL" FontSize="13" Margin="0,2,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UrlInput"
                         Height="28"
                         FontSize="12"
                         Grid.Column="0"
                         Margin="0,0,6,0"
                         Background="White"
                         BorderBrush="#D1D5DB"
                         BorderThickness="1"
                         Padding="6,1"/>
                <Button Content="Add"
                        Width="56" Height="28"
                        Grid.Column="1"
                        Click="AddUrl_Click"/>
            </Grid>
            <Separator Margin="0,10,0,8"/>

            <!-- Monitored Pages Section -->
            <TextBlock Text="Monitored Pages" FontSize="13" Margin="0,2,0,4"/>
            <Border Background="White"
                    CornerRadius="6"
                    Padding="0"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Margin="0,0,0,0"
                    SnapsToDevicePixels="True"
                    Effect="{DynamicResource ShadowEffect}">
                <ListBox x:Name="UrlList"
                         Height="84"
                         FontSize="12"
                         Background="Transparent"
                         BorderThickness="0"/>
            </Border>
            <Button Content="Clear All"
                    Width="88" Height="26" FontSize="12"
                    Margin="0,6,0,0"
                    Click="ClearBtn_Click"
                    HorizontalAlignment="Left"/>
            <Separator Margin="0,10,0,8"/>

            <!-- Activity Log Section -->
            <TextBlock Text="Activity Log" FontSize="13" Margin="0,2,0,4"/>
            <Border Background="White"
                    CornerRadius="6"
                    Padding="0"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Margin="0,0,0,0"
                    SnapsToDevicePixels="True"
                    Effect="{DynamicResource ShadowEffect}">
                <TextBox x:Name="LogBox"
                         Height="78"
                         FontSize="12"
                         Margin="0"
                         IsReadOnly="True"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </Border>
            <Separator Margin="0,10,0,10"/>

            <!-- Start/Stop Row: centered above the Settings button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Button Content="Start" x:Name="StartBtn"
                        Width="104" Height="32" FontSize="13"
                        Margin="0,0,14,0"
                        Click="StartBtn_Click"/>
                <Button Content="Stop" x:Name="StopBtn"
                        Width="104" Height="32" FontSize="13"
                        Click="StopBtn_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
